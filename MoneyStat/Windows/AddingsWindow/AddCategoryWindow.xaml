<Metro:MetroWindow x:Class="MoneyStat.Windows.AddCategoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Metro="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MoneyStat.Windows"
        mc:Ignorable="d"
        Title="Add category" Height="200" Width="350" ResizeMode="NoResize">
    <StackPanel>
        <TextBlock HorizontalAlignment="Center" Text="Add category" FontSize="22" Margin="10"/>
        <TextBlock Text="Category name" HorizontalAlignment="Center"/>
        <TextBox HorizontalAlignment="Center" Width="170" Text="{Binding NewCategory.Name}" Margin="10"/>
        <Button Margin="10" Width="260" Click="AddCategory" Content="Add category" FontSize="12"/>
    </StackPanel>
</Metro:MetroWindow>
